@model IEnumerable<FCL.Core.DataAccess.DSE>

@{
    ViewBag.Title = "Index";
}


<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">
                @Html.ActionLink("Create DSE", "CreateDSE", "Admin", null, new { @class = "btn-primary btn-block btn" })
            </div>
        </div>
        <div class="col-md-12">
            <h4>DSE List</h4>
            <div class="table-responsive">
                <form action="." method="post">
                    <table class="table table-bordred table-striped" id="clientsTable">
                        <thead>
                            <tr>
                                <th class="sorting">
                                    @Html.DisplayName("DSE Id")
                                </th>
                                <th class="sorting">
                                    @Html.DisplayName("DSE Name")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="font-family: Arial; font-size: small; color: Gray; font-weight: normal; font-style: italic">
                                    <td>
                                        <label><b>@item.Id</b></label>
                                    </td>
                                    <td>
                                        <label><b>@item.Name</b></label>
                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit DSE", "EditDse", new { id = item.Id })
                                        @*| @Html.ActionLink("User Details", "ClientDetails", new { id = item.UserId }) |*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>

@model FCL.Core.DataAccess.Company

@{
    ViewBag.Title = "Edit Branch";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("EditCompany", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Fill in the details below to Edit a company.</legend>
                <div id="success" style="display:none">
                    <div class="alert alert-success">
                        <span class="glyphicon glyphicon-ok"></span> <strong>Success!</strong><span class="status"></span>
                    </div>
                </div>
                <div class="alert alert-warning" id="warning" style="display:none">
                    <span class="glyphicon glyphicon-record"></span> <strong>Warning</strong> &nbsp; <span class="status"></span>
                </div>

                <div class="form-group">

                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", @placeholder = "Company Name" })

                </div>
                <p>
                    <input class="btn btn-lg btn-primary btn-block btn-sm" type="submit" value="Edit Company" />
                </p>
            </fieldset>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        function alertMessages(message, type) {
            var element = $('#' + type);
            element.find('.status').empty();
            element.find('.status').append(message);
            element.fadeIn(1000, function () {
                element.fadeOut(10000);
            });
        }

        var status = '@TempData["status"]';

        if (status === "Success") {
            alertMessages(" Company has been successfully edited!", "success");
        } else if (status === "Exists") {
            alertMessages(" This Company already exists!", "warning");
        }

    });
</script>




